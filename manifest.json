{
  "manifest_version": 3,
  "name": "PlexBoxd",
  "version": "1.0",
  "description": "Check Plex server availability for movies on Letterboxd",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://letterboxd.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings.html",
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 